    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    %header
      %h1= link_to 'HOLIDAY MORNING', root_path
      %h3 A novel (in progress) by Ellis Champlin
    = yield
